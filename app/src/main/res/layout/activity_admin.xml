<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#5B8EE8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Admin.AdminActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_logout"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="18dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_admin_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="48dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/black" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="28dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/card_view_admin_img"
            app:layout_constraintStart_toEndOf="@id/card_view_admin_img"
            app:layout_constraintTop_toTopOf="@id/card_view_admin_img" />

        <TextView
            android:id="@+id/text_view_admin_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@gmail.com"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/text_view_admin_name"
            app:layout_constraintTop_toBottomOf="@+id/text_view_admin_name" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_events"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_marginTop="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_admin_img">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:text="Events"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_placements"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="42dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toStartOf="@id/card_view_hackathons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_events">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:text="Placements"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_hackathons"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="42dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_view_placements"
            app:layout_constraintTop_toBottomOf="@id/card_view_events">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:text="Hackathons"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@color/black" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_View_trainings"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="22dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toStartOf="@id/card_view_higher_education"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_placements">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:text="Training"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_higher_education"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="22dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_View_trainings"
            app:layout_constraintTop_toBottomOf="@id/card_view_hackathons">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:text="Higher Education"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_internships"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginTop="22dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintStart_toStartOf="@id/card_View_trainings"
            app:layout_constraintTop_toBottomOf="@+id/card_View_trainings">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="8dp"
                android:text="Internships"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@color/black" />

        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view_internships" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>